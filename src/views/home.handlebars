{{>nav}}

    <div class ="container my-4  shadow-sm  rounded p-4">
        {{#if user}}
            <h4>Benvenido </h5>
            <h5>{{user.name}} {{user.lastName}}</h5>
        {{/if}}
    </div>
    <div class = "d-flex flex-wrap justify-content-center my-4  " >
        {{#each products.docs}}
            {{#if this.cartId}}
            <div class="d-flex flex-wrap justify-content-center my-4 " >
                <form  action="/carts/{{this.cartId}}/products/{{this._id}}"  method="post">
                    <div class="d-flex flex-wrap my-4 " >
                        <div class ="d-flex flex-row justify-content-center  shadow-sm  rounded mx-2 ">
                            <div class ="container-sm ">
                                <div class ="container-sm mx-auto">
                                    <img class="card-img-top img1 my-2" src={{this.linkThubnail}} alt="Card image cap" style="object-fit: cover;">
                                    <h5 class="card-title">{{this.name}}</h5>
                                    <p class="list-group-item my-2">Envase: {{this.container}}</p>
                                    <p class="list-group-item">Litros: {{this.liters}}</p>
                                    <p class="list-group-item text-green">$ {{this.price}} </p>
                                    <input type="hidden" name="productId" value={{this._id}}>
                                    <input type="hidden" name="cartId" value={{this.cartId}}>
                                </div>
                                <div class ="d-inline-flex my-4">
                                    <div class ="container-sm">
                                         <input type="number" name="quantity" class="form-control " placeholder="" aria-label="" aria-describedby="basic-addon1">
                                    </div>
                                    <div class ="container-sm">
                                        <button  type="submit" class ="btn btn-sm btn-danger">Add to cart</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            {{else}}
                <div class="d-flex flex-wrap justify-content-center my-4 " >
                    <form  class ="" action="/carts"  method="post">
                        <div class="d-flex flex-wrap my-4" >
                            <div class ="d-flex flex-row justify-content-center  shadow-sm  rounded mx-2 ">
                                <div class ="container-sm ">
                                    <div class ="container-sm mx-o">
                                        <img class="card-img-top img1 my-2" src={{this.linkThubnail}} alt="Card image cap" style="object-fit: cover;">
                                        <h5 class="card-title">{{this.name}}</h5>
                                        <p class="list-group-item my-2">Envase: {{this.container}}</p>
                                        <p class="list-group-item">Litros: {{this.liters}}</p>
                                        <p class="list-group-item text-green">$ {{this.price}} </p>
                                        <input type="hidden" name="productId" value={{this._id}}>
                                        <input type="hidden" name="cartId" value={{this.cartId}}>
                                    </div>
                                    <div class ="d-inline-flex my-4">
                                        <div class ="container-sm my-4">
                                            <input type="number" name="quantity" class="form-control " placeholder="" aria-label="" aria-describedby="basic-addon1">
                                        </div>
                                        <div class ="container-sm my-4">
                                            <button  type="submit" class ="btn btn-sm btn-danger">Add to cart</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
               {{/if}} 
            {{/each}}
    </div>
    <div class = "container my-4  shadow-sm  rounded p-4" >
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="{{products.prevLink}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only"></span>
                    </a>
                </li>
                    {{#each array}}
                        <li class="page-item "><a class="page-link" href="/views/products?page={{this.page}}">{{this.page}}</a></li>
                    {{/each }}
                 <li class="page-item">
                    <a class="page-link" href="{{products.nextLink}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only"></span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

{{>footer}}



