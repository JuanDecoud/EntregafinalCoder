<div class ="container-fluid">
    <div class ="container-sm mx-auto my-4">
        <table class="table table-lg table-hover table-bordered ">
            <thead class ="text-center">
                <tr>
                <th scope="col">User Name</th>
                <th scope="col">Category</th>
                <th scope="col"></th>
                <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            {{#each result}}
                <tr>
                    <td>{{this.userName}}</td>
                    <td>{{this.category}}</td>
                    <td class ="text-center">
                        <form action="/user/{{this._id}}?_method=delete" method="post">
                            <button type ="submit" class = "btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                    <td class ="text-center">
                        <input id="${{}}"type="hidden" value ="{{_id}}" name = "userId">
                        <button id ="btnModify" class = "btn btn-sm btn-danger">Modificar</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
       </table>
       <div class ="container sm">
            <form action="/views/products" method ="get">
                <button  type ="submit" class ="btn btn-m btn-danger">
                    Back
                </button>
            </form>
       </div>
    </div>
</div>

<script src="/js/modify.js"> </script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>